# .editorconfig
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# YAML/JSON обычно с отступом 2
[*.{yml,yaml,json}]
indent_size = 2

# Маркдаун – не режем хвостовые пробелы (нужны для переносов)
[*.md]
trim_trailing_whitespace = false

# Windows-скрипты пусть остаются с CRLF
[*.{bat,cmd}]
end_of_line = crlf
